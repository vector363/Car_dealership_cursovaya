<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background_start"
    android:layout_marginTop="-50dp">

    <View
        android:layout_width="wrap_content"
        android:layout_height="440dp"/>

    <LinearLayout
        android:id="@+id/auth_switch_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_auth_switch"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/switch_login"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Вход"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorTextGray"
            android:background="@drawable/bg_auth_tab_selected"/>

        <TextView
            android:id="@+id/switch_register"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"

            android:textColor="@color/colorTextGray"
            android:background="@drawable/bg_auth_tab_unselected"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>